<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/redColor"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/captureDocumentProceed">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/nomineePhotoLayout"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                android:background="@color/redColor"
                android:visibility="visible">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="44dp"
                    android:text="Nominee’s Photo:"
                    android:textColor="@color/whiteColor" />

                <ImageView
                    android:id="@+id/nomineePhoto"
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="40dp"
                    android:adjustViewBounds="true"
                    android:background="@color/whiteColor"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/nomimeePhotoTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/textView6"
                    android:layout_alignStart="@+id/nomineePhoto"
                    android:text="Tap to capture Nominee’sPhoto"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/blackColor" />


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/nomineeIdLayout"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                android:background="@color/redColor"
                android:visibility="visible">


                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:text="Nominee’s ID"
                    android:textColor="@color/whiteColor" />

                <ImageView
                    android:id="@+id/nomineeIdFront"
                    android:layout_width="170dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/nomineeIdBack"
                    android:layout_marginStart="32dp"
                    android:adjustViewBounds="true"
                    android:background="@color/whiteColor"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/nomineeIdBack"
                    android:layout_width="170dp"
                    android:layout_height="100dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="42dp"
                    android:adjustViewBounds="true"
                    android:background="@color/whiteColor"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/nomineeIdFrontTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/nomineeIdFront"
                    android:layout_alignStart="@+id/nomineeIdFront"
                    android:layout_centerVertical="true"
                    android:text="Tap to capture Nominee’s ID  Front"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/blackColor" />

                <TextView
                    android:id="@+id/nomineeIdBackTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/nomineeIdBack"
                    android:layout_alignStart="@+id/nomineeIdBack"
                    android:layout_alignTop="@+id/nomineeIdFrontTag"
                    android:text="Tap to capture Nominee’s ID Back"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/blackColor" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/customerPhotoLayout"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                android:background="@color/redColor"
                android:visibility="visible">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="40dp"
                    android:text="Customer’s Photo:"
                    android:textColor="@color/whiteColor" />

                <ImageView
                    android:id="@+id/customerPhoto"
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="40dp"
                    android:adjustViewBounds="true"
                    android:background="@color/whiteColor"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/customerPhotoTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/textView2"
                    android:layout_alignStart="@+id/customerPhoto"
                    android:text="Tap to capture Customer’s Photo"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/blackColor" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/customerIdLayout"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                android:background="@color/redColor"
                android:visibility="visible">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:text="Customer’s ID"
                    android:textColor="@color/whiteColor" />

                <ImageView
                    android:id="@+id/customerIdFront"
                    android:layout_width="170dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/customerIdBack"
                    android:layout_marginStart="32dp"
                    android:adjustViewBounds="true"
                    android:background="@color/whiteColor"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/customerIdBack"
                    android:layout_width="170dp"
                    android:layout_height="100dp"
                    android:adjustViewBounds="true"
                    android:background="@color/whiteColor"
                    android:scaleType="fitXY"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="42dp"
                    />

                <TextView
                    android:id="@+id/customerIdFrontTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/customerIdFront"
                    android:layout_alignStart="@+id/customerIdFront"
                    android:layout_alignTop="@+id/customerIdBackTag"
                    android:text="Tap to capture Customer’s ID  Front"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/blackColor" />

                <TextView
                    android:id="@+id/customerIdBackTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/customerIdBack"
                    android:layout_alignStart="@+id/customerIdBack"
                    android:layout_centerVertical="true"
                    android:text="Tap to capture Nominee’s ID Back"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/blackColor" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/captureDocumentProceed"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:background="@color/whiteColor"
        android:text="Proceed" />


</RelativeLayout>